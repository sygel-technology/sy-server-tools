<odoo>
    <record id="avoid_assignation_notification_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">avoid.assignation.notification.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mail.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='emails']" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Assignations Notifications</span>
                            <div class="text-muted">
                                Assignations messages related to the selected models will not be created
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="excluded_models_assignation_notif_ids" class="o_light_label"/>
                                    <field name="excluded_models_assignation_notif_ids" class="oe_inline" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
